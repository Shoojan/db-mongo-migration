{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "ES2020",
    "allowJs": true,
    "lib": ["es6"],
    "module": "Node16",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["./dist", "./node_modules", "tests"]
}
